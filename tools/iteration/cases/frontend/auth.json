{
  "name": "frontend-auth",
  "description": "前台登录注册流程",
  "start_url": "http://localhost:5173",
  "auth": {
    "required": false
  },
  "steps": [
    {
      "action": "wait",
      "text": "万界轮回",
      "timeout": 10000
    },
    {
      "action": "screenshot",
      "name": "title-screen"
    },
    {
      "action": "click",
      "target_text": "登录"
    },
    {
      "action": "wait",
      "text": "登录账号",
      "timeout": 5000
    },
    {
      "action": "screenshot",
      "name": "login-page"
    },
    {
      "action": "console_check",
      "allow_warnings": true,
      "allow_errors": false
    }
  ],
  "assertions": [
    {
      "type": "no_console_errors"
    }
  ],
  "viewports": [
    { "name": "desktop", "width": 1920, "height": 1080 },
    { "name": "laptop", "width": 1366, "height": 768 },
    { "name": "mobile", "width": 390, "height": 844, "isMobile": true }
  ]
}
